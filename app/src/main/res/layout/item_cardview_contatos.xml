<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="2dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#817C4DFF"
    android:id="@+id/cardview_item_contato"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_img"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/outline_face_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_contact_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/nome_destaque_bold"
                android:gravity="center|start"
                android:text="TextView" />

            <TextView
                android:id="@+id/item_contact_fone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/txt_dentro_normal"
                android:layout_gravity="center|start"
                android:text="TextView" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>